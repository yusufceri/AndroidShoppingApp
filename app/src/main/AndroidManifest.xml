<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shoppingapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".app.SPApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.ShoppingApp">
        <activity
            android:name=".login.LoginActivity"
            android:exported="true"
            android:label="@string/title_activity_login"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".home.DashboardActivity"
            android:exported="true"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".details.DetailsActivity"
            android:exported="true"
            android:label="@string/title_activity_details" />
        <activity
            android:name=".shoppingcart.CartScreenActivity"
            android:exported="true"
            android:label="@string/title_activity_cart" />
        <activity
            android:name=".checkout.CheckoutActivity"
            android:exported="true"
            android:label="@string/title_activity_checkout" />
    </application>

</manifest>